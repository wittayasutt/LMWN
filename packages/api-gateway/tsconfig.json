	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"outDir": "dist",
		"resolveJsonModule": true
	},
	"exclude": ["./coverage", "./dist", "__tests__", "jest.config.js"]
}
